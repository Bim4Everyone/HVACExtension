<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки"
        Width="620"
        Height="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" SelectedIndex="0" Margin="5">
            <TabItem Header="Расходники">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="4">
                        <Expander Header="Эмаль" IsExpanded="False">
                            <Grid Margin="0 4 0 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Text="Эмаль имя"
                                           Grid.Row="0"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="EnamelNameTextBox"
                                         Grid.Row="1"
                                         Margin="0 0 0 8"
                                         MinWidth="200" />

                                <TextBlock Text="Эмаль марка"
                                           Grid.Row="2"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="EnamelBrandTextBox"
                                         Grid.Row="3"
                                         Margin="0 0 0 8" />

                                <TextBlock Text="Эмаль код"
                                           Grid.Row="4"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="EnamelCodeTextBox"
                                         Grid.Row="5"
                                         Margin="0 0 0 8" />

                                <TextBlock Text="Эмаль завод"
                                           Grid.Row="6"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="EnamelFactoryTextBox"
                                         Grid.Row="7"
                                         Margin="0 0 0 8" />

                                <TextBlock Text="Эмаль единица"
                                           Grid.Row="8"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="EnamelUnitTextBox"
                                         Grid.Row="9"
                                         Margin="0 0 0 8" />
                            </Grid>
                        </Expander>

                        <Expander Header="Грунтовка"
                                  IsExpanded="False"
                                  Margin="0 4 0 0">
                            <Grid Margin="0 4 0 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Text="Грунтовка имя"
                                           Grid.Row="0"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="PrimerNameTextBox"
                                         Grid.Row="1"
                                         Margin="0 0 0 8" />

                                <TextBlock Text="Грунтовка марка"
                                           Grid.Row="2"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="PrimerBrandTextBox"
                                         Grid.Row="3"
                                         Margin="0 0 0 8" />

                                <TextBlock Text="Грунтовка код"
                                           Grid.Row="4"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="PrimerCodeTextBox"
                                         Grid.Row="5"
                                         Margin="0 0 0 8" />

                                <TextBlock Text="Грунтовка завод"
                                           Grid.Row="6"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="PrimerFactoryTextBox"
                                         Grid.Row="7"
                                         Margin="0 0 0 8" />

                                <TextBlock Text="Грунтовка единица"
                                           Grid.Row="8"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="PrimerUnitTextBox"
                                         Grid.Row="9"
                                         Margin="0 0 0 8" />
                            </Grid>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="5">
            <Button x:Name="OkButton"
                    Content="OK"
                    Width="90"
                    Margin="0 0 8 0"
                    IsDefault="True" />
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="90"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>


