<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="620"
        Height="620"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" SelectedIndex="0" Margin="5">
            <TabItem Header="Расходники">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="4">
                        <Expander Header="Эмаль" IsExpanded="False">
                            <Grid Margin="0 4 0 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Text="Эмаль имя"
                                           Grid.Row="0"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="EnamelNameTextBox"
                                         Grid.Row="1"
                                         Margin="0 0 0 8"
                                         MinWidth="200" />

                                <TextBlock Text="Эмаль марка"
                                           Grid.Row="2"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="EnamelBrandTextBox"
                                         Grid.Row="3"
                                         Margin="0 0 0 8" />

                                <TextBlock Text="Эмаль код"
                                           Grid.Row="4"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="EnamelCodeTextBox"
                                         Grid.Row="5"
                                         Margin="0 0 0 8" />

                                <TextBlock Text="Эмаль завод"
                                           Grid.Row="6"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="EnamelFactoryTextBox"
                                         Grid.Row="7"
                                         Margin="0 0 0 8" />

                                <TextBlock Text="Эмаль единица"
                                           Grid.Row="8"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="EnamelUnitTextBox"
                                         Grid.Row="9"
                                         Margin="0 0 0 8" />
                            </Grid>
                        </Expander>

                        <Expander Header="Грунтовка"
                                  IsExpanded="False"
                                  Margin="0 4 0 0">
                            <Grid Margin="0 4 0 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Text="Грунтовка имя"
                                           Grid.Row="0"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="PrimerNameTextBox"
                                         Grid.Row="1"
                                         Margin="0 0 0 8" />

                                <TextBlock Text="Грунтовка марка"
                                           Grid.Row="2"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="PrimerBrandTextBox"
                                         Grid.Row="3"
                                         Margin="0 0 0 8" />

                                <TextBlock Text="Грунтовка код"
                                           Grid.Row="4"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="PrimerCodeTextBox"
                                         Grid.Row="5"
                                         Margin="0 0 0 8" />

                                <TextBlock Text="Грунтовка завод"
                                           Grid.Row="6"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="PrimerFactoryTextBox"
                                         Grid.Row="7"
                                         Margin="0 0 0 8" />

                                <TextBlock Text="Грунтовка единица"
                                           Grid.Row="8"
                                           Margin="0 0 0 4" />
                                <TextBox x:Name="PrimerUnitTextBox"
                                         Grid.Row="9"
                                         Margin="0 0 0 8" />
                            </Grid>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Воздуховоды">
                <DataGrid x:Name="DuctsGrid"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Extended"
                          SelectionUnit="FullRow"
                          Margin="4"
                          IsReadOnly="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id элемента"
                                            Binding="{Binding Id}"
                                            IsReadOnly="True"
                                            Width="100" />
                        <DataGridTextColumn Header="Имя"
                                            Binding="{Binding Name}"
                                            IsReadOnly="True"
                                            Width="2*" />
                        <DataGridCheckBoxColumn Header="Расчет&#x0a;металла"
                                                Binding="{Binding CalcMetal}"
                                                Width="80">
                            <DataGridCheckBoxColumn.ElementStyle>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Tag" Value="CalcMetal" />
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridCheckBoxColumn.ElementStyle>
                            <DataGridCheckBoxColumn.EditingElementStyle>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Tag" Value="CalcMetal" />
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridCheckBoxColumn.EditingElementStyle>
                        </DataGridCheckBoxColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Трубы">
                <DataGrid x:Name="PipesGrid"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Extended"
                          SelectionUnit="FullRow"
                          Margin="4"
                          IsReadOnly="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id элемента"
                                            Binding="{Binding Id}"
                                            IsReadOnly="True"
                                            Width="100" />
                        <DataGridTextColumn Header="Имя"
                                            Binding="{Binding Name}"
                                            IsReadOnly="True"
                                            Width="2*" />
                        <DataGridCheckBoxColumn Binding="{Binding CalcMetal}"
                                                Width="80"
                                                CanUserResize="False">
                            <DataGridCheckBoxColumn.Header>
                                <TextBlock Text="Расчет&#x0a;металла" TextAlignment="Center" />
                            </DataGridCheckBoxColumn.Header>
                            <DataGridCheckBoxColumn.ElementStyle>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Tag" Value="CalcMetal" />
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridCheckBoxColumn.ElementStyle>
                            <DataGridCheckBoxColumn.EditingElementStyle>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Tag" Value="CalcMetal" />
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridCheckBoxColumn.EditingElementStyle>
                        </DataGridCheckBoxColumn>
                        <DataGridCheckBoxColumn Width="80"
                                                Binding="{Binding CalcPaintFixings}"
                                                CanUserResize="False">
                            <DataGridCheckBoxColumn.Header>
                                <TextBlock Text="Расчет&#x0a;краски" TextAlignment="Center" />
                            </DataGridCheckBoxColumn.Header>
                            <DataGridCheckBoxColumn.ElementStyle>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Tag" Value="CalcPaintFixings" />
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridCheckBoxColumn.ElementStyle>
                            <DataGridCheckBoxColumn.EditingElementStyle>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Tag" Value="CalcPaintFixings" />
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridCheckBoxColumn.EditingElementStyle>
                        </DataGridCheckBoxColumn>
                        <DataGridCheckBoxColumn Width="80"
                                                Binding="{Binding CalcClamps}"
                                                CanUserResize="False">
                            <DataGridCheckBoxColumn.Header>
                                <TextBlock Text="Расчет&#x0a;хомутов" TextAlignment="Center" />
                            </DataGridCheckBoxColumn.Header>
                            <DataGridCheckBoxColumn.ElementStyle>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Tag" Value="CalcClamps" />
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridCheckBoxColumn.ElementStyle>
                            <DataGridCheckBoxColumn.EditingElementStyle>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Tag" Value="CalcClamps" />
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridCheckBoxColumn.EditingElementStyle>
                        </DataGridCheckBoxColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Изоляция - трубы">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="PipeInsulationItems" Margin="4">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander IsExpanded="False" Margin="0 0 0 6">
                                    <Expander.Header>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} - {1}">
                                                    <Binding Path="Id" />
                                                    <Binding Path="TypeName" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Expander.Header>
                                    <ItemsControl ItemsSource="{Binding Consumables}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="0 4 0 8">
                                                    <TextBlock Text="{Binding Index, StringFormat=Расходник {0}}" FontWeight="Bold" Margin="0 0 0 4"/>
                                                    <Grid Margin="0 0 0 4">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="180"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Text="{Binding Index, StringFormat=Расходник {0} имя}" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                                                        <TextBox Text="{Binding Name}" Grid.Row="0" Grid.Column="1" Margin="4 0 0 4"/>

                                                        <TextBlock Text="{Binding Index, StringFormat=Расходник {0} марка}" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                                                        <TextBox Text="{Binding Mark}" Grid.Row="1" Grid.Column="1" Margin="4 0 0 4"/>

                                                        <TextBlock Text="{Binding Index, StringFormat=Расходник {0} код}" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                                                        <TextBox Text="{Binding Code}" Grid.Row="2" Grid.Column="1" Margin="4 0 0 4"/>

                                                        <TextBlock Text="{Binding Index, StringFormat=Расходник {0} артикул}" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                                                        <TextBox Text="{Binding Article}" Grid.Row="3" Grid.Column="1" Margin="4 0 0 4"/>

                                                        <TextBlock Text="{Binding Index, StringFormat=Расходник {0} завод}" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                                                        <TextBox Text="{Binding Factory}" Grid.Row="4" Grid.Column="1" Margin="4 0 0 4"/>

                                                        <TextBlock Text="{Binding Index, StringFormat=Расходник {0} единица}" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                                                        <TextBox Text="{Binding Unit}" Grid.Row="5" Grid.Column="1" Margin="4 0 0 4"/>

                                                        <TextBlock Text="{Binding Index, StringFormat=Расходник {0} расход на м.п.}" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
                                                        <TextBox Text="{Binding RatePerMeter}" Grid.Row="6" Grid.Column="1" Margin="4 0 0 4"/>

                                                        <StackPanel Grid.Row="7"
                                                                    Grid.Column="1"
                                                                    Orientation="Horizontal"
                                                                    Margin="4 4 0 0">
                                                            <TextBlock Text="{Binding Index, StringFormat=Расход {0} по м2}"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0 0 8 0"/>
                                                            <CheckBox IsChecked="{Binding RatePerSqm}"
                                                                      VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Изоляция - воздуховоды">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="DuctInsulationItems" Margin="4">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander IsExpanded="False" Margin="0 0 0 6">
                                    <Expander.Header>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} - {1}">
                                                    <Binding Path="Id" />
                                                    <Binding Path="TypeName" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Expander.Header>
                                    <ItemsControl ItemsSource="{Binding Consumables}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="0 4 0 8">
                                                    <TextBlock Text="{Binding Index, StringFormat=Расходник {0}}" FontWeight="Bold" Margin="0 0 0 4"/>
                                                    <Grid Margin="0 0 0 4">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="180"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Text="{Binding Index, StringFormat=Расходник {0} имя}" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                                                        <TextBox Text="{Binding Name}" Grid.Row="0" Grid.Column="1" Margin="4 0 0 4"/>

                                                        <TextBlock Text="{Binding Index, StringFormat=Расходник {0} марка}" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                                                        <TextBox Text="{Binding Mark}" Grid.Row="1" Grid.Column="1" Margin="4 0 0 4"/>

                                                        <TextBlock Text="{Binding Index, StringFormat=Расходник {0} код}" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                                                        <TextBox Text="{Binding Code}" Grid.Row="2" Grid.Column="1" Margin="4 0 0 4"/>

                                                        <TextBlock Text="{Binding Index, StringFormat=Расходник {0} артикул}" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                                                        <TextBox Text="{Binding Article}" Grid.Row="3" Grid.Column="1" Margin="4 0 0 4"/>

                                                        <TextBlock Text="{Binding Index, StringFormat=Расходник {0} завод}" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                                                        <TextBox Text="{Binding Factory}" Grid.Row="4" Grid.Column="1" Margin="4 0 0 4"/>

                                                        <TextBlock Text="{Binding Index, StringFormat=Расходник {0} единица}" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                                                        <TextBox Text="{Binding Unit}" Grid.Row="5" Grid.Column="1" Margin="4 0 0 4"/>

                                                        <TextBlock Text="{Binding Index, StringFormat=Расходник {0} расход на м.п.}" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
                                                        <TextBox Text="{Binding RatePerMeter}" Grid.Row="6" Grid.Column="1" Margin="4 0 0 4"/>

                                                        <StackPanel Grid.Row="7"
                                                                    Grid.Column="1"
                                                                    Orientation="Horizontal"
                                                                    Margin="4 4 0 0">
                                                            <TextBlock Text="{Binding Index, StringFormat=Расход {0} по м2}"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0 0 8 0"/>
                                                            <CheckBox IsChecked="{Binding RatePerSqm}"
                                                                      VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="5">
            <Button x:Name="OkButton"
                    Content="OK"
                    Width="90"
                    Margin="0 0 8 0"
                    IsDefault="True" />
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="90"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
